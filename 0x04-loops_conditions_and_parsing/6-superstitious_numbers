#!/usr/bin/env bash
#Creating a script that uses case statements
counter=1
while [ $counter -lt 21 ]; do
    echo $counter
    case "$counter" in
	"4")
	    echo "bad luck from China"
	    ;;
	"9")
	    echo "bad luck from Japan"
	    ;;
	"17")
	    echo "bad luck from Italy"
	    ;;
    esac
    let counter+=1
done
